extends ../../layout/adminBase

block append script 
    script(src="/JS/bundle/admin/bundleAdmin.js")       

block block 
    #right.col-9 
        hr
        .p-5.pt-2
            h2.text-center.fw-bold.m-4 Post Job
            div
                form#createNewJob(data-id=partner.hiwpmID data-from=partner.for)
                    .mb-3.row
                        label.col-sm-3.col-form-label.fw-bold() Job Title:
                        .col-sm-7
                            input.form-control.bg-li#jobTitle(type='text' placeholder='Job Title')
                    .mb-3.row
                        label.col-sm-3.col-form-label.fw-bold() Job Category:
                        .col-sm-7
                            select.form-select.border.border-2.bg-li#jobCategory
                                option(value="") -- Select your category -- 
                                each doc in categories
                                    option(value=doc.name)= doc.name

                    .mb-3.row
                        label.col-sm-3.col-form-label.fw-bold() Specilality:
                        .col-sm-7
                            select.form-select.border.border-2.bg-li#jobSpeciality
                                option(value="") -- Select your Speciality -- 
                    .mb-3.row
                        label.col-sm-3.col-form-label.fw-bold() Job Type:
                        .col-sm-7
                            select.form-select.border.border-2.bg-li#jobType
                                option(value="") -- Select your Job Type -- 
                                option(value="Part-Time") Part-Time 
                                option(value="Full-Time") Full-Time 


                    .mb-3.row
                        label.col-sm-3.col-form-label.fw-bold(for='inputPassword') Year of Experience:
                        .col-sm-7
                            input.form-control.bg-li#yearOfExperience(type='text' placeholder='Year of Experience')
                    .mb-3.row
                        label.col-sm-3.col-form-label.fw-bold(for='inputPassword') salary per month:
                        .col-sm-7
                            input.form-control.bg-li#salaryPerMonth(type='text' placeholder='salary per month')
                    .mb-3.row
                        label.col-sm-3.col-form-label.fw-bold(for='inputPassword') Number of Vacancy:
                        .col-sm-7
                            input.form-control.bg-li#vacancy(type='text' placeholder='Number of vancancy')
                    .mb-3.row
                        label.col-sm-3.col-form-label.fw-bold(for='inputPassword') Location :
                        .col-sm-3
                            input.form-control.bg-li#latitude(type='text' placeholder='latitude')
                        .col-sm-3
                            input.form-control.bg-li#longitide(type='text' placeholder='longitude')
                        .col-sm-1
                            i.fa-solid.fa-location-dot.border.bg-li.fs-5.p-2.ps-3.pe-3.rounded.text-secondary
                    .mb-3.row
                        label.col-sm-3.col-form-label.fw-bold(for='inputPassword') Hours :
                        .col-sm-3
                            input.form-control.bg-li#openTime(type='text' placeholder='Open time')
                        .col-sm-3
                            input.form-control.bg-li#closeTime(type='text' placeholder='Close time')
                    .mb-3.row
                        label.col-sm-3.col-form-label.fw-bold(for='inputPassword') City :
                        .col-sm-7
                            input.form-control.bg-li#city(type='text' placeholder='City')
                    .mb-3.row
                        label.col-sm-3.col-form-label.fw-bold(for='inputPassword') State:
                        .col-sm-7
                            input.form-control.bg-li#state(type='text' placeholder='State')
                    .mb-3.row
                        label.col-sm-3.col-form-label.fw-bold(for='inputPassword') Pincode/Zip :
                        .col-sm-7
                            input.form-control.bg-li#pincode(type='text' placeholder='Pincode')
                    .mb-3.row
                        label.col-sm-3.col-form-label.fw-bold(for='inputPassword') Country : :
                        .col-sm-7
                            input.form-control.bg-li#country(type='text' placeholder='Country ')
                    .mb-3.row
                        label.col-sm-3.col-form-label.fw-bold(for='inputPassword') Address :
                        .col-sm-7
                            textarea.form-control.bg-li#address(rows='3')
                    .mb-3.row
                        label.col-sm-3.col-form-label.fw-bold(for='inputPassword') Description :
                        .col-sm-7
                            textarea.form-control.bg-li#description(rows='3')
                    .text-center
                        button.btn.btn-danger.ps-5.pe-5.me-5(type='button')
                            | Cancel
                        button.btn.btn-success.ps-4.pe-4.me-s(type='submit' )
                            | Post Job