doctype html
html
    block head
        // Required meta tags
        meta(charset='UTF-8')
        meta(http-equiv='X-UA-Compatible' content='IE=edge')
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        // Bootstrap CSS
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx' crossorigin='anonymous')
        // Bootstrap Font Icon CSS
        link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css')
        //- mdb
        // Style Sheet
        link(href='/CSS/style.css' rel='stylesheet')
        // Fontawesome
        script(src='https://kit.fontawesome.com/bd6e4adc4b.js' crossorigin='anonymous')
        title Blood Bank Profile Page
        link(rel='stylesheet' href='/CSS/lightslider.css')
        link(rel="stylesheet", href="/CSS/userStyle.css")
    body 
        include ../../layout/header
        // Map and Card Section Start
        section
            .row.m-0.app_page1
                #left.col-2.m-0
                    a.cursor-pointer
                        .card.p-1.mt-3
                            .row
                                .col-3
                                    img.blood-bank-image.h-100(src='./Assets/images/ambulance.jpg' alt='specialists Image')
                                .col-9
                                    h6.fw-bold.text-12.main-color Centres Name
                                    p.text-12.m-0.text-dark Chennai
                                    p.text-12.m-0.text-dark +91 9709908734
                #right.col-10
                    #ambulance_start_location(style="width:100%;height:100%;")
                    //- .d-flex.justify-content-start.input-location#ambulance_location_type
                        div.ms-3
                            //- input(placeholder='My location...' name='fname' required='')
                            button.btn.btn-success#ambulanceStartLocation Start Location
                        div.ms-3
                            //- input(placeholder='Destination...' name='fname' required='')
                            button.btn.btn-danger#ambulanceEndLocation End Location

                    .d-flex.book-button-map.justify-content-center
                        a.book-service.buton-width.mt-3( data-bs-toggle='modal' data-bs-target='#Register') Confirm
                        //- a.book-service.buton-width.mt-3(href='./userAmbulanceList.html ') Search Now
                        // Map and Card Section End
                        // Booking Home Modal
                    #Register.modal.fade(data-bs-backdrop='static' data-bs-keyboard='false' tabindex='-1' aria-labelledby='RegisterLabel' aria-hidden='true')
                        .modal-dialog.modal-dialog-scrollable
                            .modal-content
                                .modal-header
                                    h5#RegisterLabel.modal-title.main-color.fs-6.text-uppercase.fw-bold
                                        | Book Now
                                    button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
                                .modal-body
                                    form#request_user_ambulance_quote
                                        div
                                            h6
                                                | Select Date
                                                i.fa-solid.fa-star-of-life.text-danger.text-12
                                            div
                                                input#date(type='date' name='trip-start' )
                                        div
                                            h6
                                                | Select Time
                                                i.fa-solid.fa-star-of-life.text-danger.text-12
                                            p
                                                input#time(type='time' name='appt')
                                        button.conform-service-booking(type="submit") Conform Booking
                                .modal-footer
                        script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js' integrity='sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa' crossorigin='anonymous')
                        script(src='https://maps.googleapis.com/maps/api/js?key=AIzaSyDNGeNSIMOhpEMyJy4bS2W0uKue0IBoutk&callback=initMap&v=weekly&region=IN' defer='') 
                        script(src="/JS/bundle/user/bundleUser.js")