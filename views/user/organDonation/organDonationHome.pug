extends ../../layout/base

block append head 
    link(rel="stylesheet", href="/CSS/userStyle.css")
    link(rel="stylesheet", href="/CSS/lightslider.css")

block append script 
    script(src="/JS/bundle/user/bundleUser.js")     

block block 
    // Hero section Start
    section.small-hero-image-div
        img.small-hero-image(src='/Assets/images/orgondonation.jpg' alt='homecare service banner')
        .small-hero-image-overlay
            .hero-image-text
                h1 Organ Avilable Hospital List
    // Hero section End
    // Home Care Service Centres List Section Start
    section.mt-4.container
        .row
            // Fillter Section
            .col-4
                .small-shdow.p-2.rounded
                    .d-flex.justify-content-between
                        div
                            h6.fw-bold
                                i.fa-duotone.fa-kidneys.me-3
                                |  Organ List
                    .mt-4
                        .row.row-cols-1.row-cols-md-2.g-4
                            each doc in organs
                                .col
                                    a(href=`./organ-lists?organ=${doc.name}`)
                                        div
                                            img.small-shdow.img-thumbnail(src=doc.bannerImage alt='category name')
                                            h6.text-center.main-color= doc.name
            // Card Section
            .col-8
                .small-shdow.p-2.rounded
                    p.card-small-description Shows 1-40 out of 400
                    h4.fw-bold Your requestd (Organ Name) Organ Avilable Hospital List
                each doc in docs
                    .small-shdow.rounded.mt-3
                        .row
                            .col-5
                                img.img-thumbnail.border-0(src=doc.bannerImage alt='Shop Name')
                            .col-7.p-2
                                h5.m-0= doc.hospitalName
                                p.m-0= doc.name
                                .d-flex.flex-row.bd-highlight.m-0
                                    .bd-highlight
                                        p.card-small-description
                                            i.fa-solid.fa-location-dot.me-2.text-primary
                                            |                       #{doc.city}
                                .d-flex.flex-row.bd-highlight.m-0
                                    .bd-highlight.m-0
                                        p
                                            i.fa-solid.fa-book.me-2.text-primary
                                    .bd-highlight
                                        p.card-small-description= doc.description
                                .d-flex.justify-content-between.m-0
                                    .d-flex.flex-row.bd-highlight.m-0
                                        .bd-highlight.me-1.fw-bold Ratings :
                                        .bd-highlight
                                            i.fa-solid.fa-star.text-12.text-warning
                                        .bd-highlight
                                            i.fa-solid.fa-star.text-12.text-warning
                                        .bd-highlight
                                            i.fa-solid.fa-star.text-12.text-warning
                                        .bd-highlight
                                            i.fa-solid.fa-star.text-12.text-warning
                                        .bd-highlight
                                            i.fa-regular.fa-star.text-12.text-warning
                                    .me-1.mt-3
                                        a.button-view-details(href=`./hospital/${doc._id}`)
                                            | View Details 
                                            i.fa-solid.fa-arrow-right

                // Pagination Sction
                div
                    .pagination_rounded
                        ul
                            li
                                a.prev(href='#')
                                    i.fa.fa-angle-left(aria-hidden='true')
                                    |  Prev
                            li
                                a(href='#') 1
                            li.hidden-xs
                                a.active(href='#') 2
                            li.hidden-xs
                                a(href='#') 3
                            li.hidden-xs
                                a(href='#') 4
                            li.hidden-xs
                                a(href='#') 5
                            li.visible-xs
                                a(href='#') ...
                            li
                                a(href='#') 6
                            li
                                a.next(href='#')
                                    | Next 
                                    i.fa.fa-angle-right(aria-hidden='true')
    // Home Care Service Centres List Section End
