                | Fugit laudantium aperiam quo debitis ad nesciunt eos libero totam odit
                | impedit.
        .d-flex.flex-row-reverse.bd-highlight.m-0
            .bd-highlight.m-0
                //- a(href='./userHearingAidBookings.html') View All
        .mt-4
            .row.row-cols-2.row-cols-md-2.g-4
                each doc in bookings
                    .col
                        .small-shdow.card.rounded.mt-3
                            .row
                                .col-5
                                    img.img-thumbnail.border-0.h-100(src=doc.hosital[0].bannerImage alt='Shop Name')
                                .col-7.p-2
                                    .d-flex.bd-highlight
                                        .flex-grow-1.bd-highlight
                                            h6.main-color.fw-bold.text-uppercase
                                                | #{doc.hosital[0].company}
                                    p.main-color.fw-bold.m-0 #{doc.hosital[0].city}
                                    p.text-12.m-0= doc.hosital[0].address
                                    .d-flex.justify-content-between
                                        div
                                            p.main-color.fw-bold.text-12.m-0
                                                | Requested Date:
                                                span.ms-2.text-secondary  #{new Date(doc.bookedDate).toLocaleDateString()}
                                    .d-flex.justify-content-between
                                        div
                                            p.main-color.fw-bold.text-12.m-0
                                                | Phone:
                                                span.ms-2.text-secondary
                                                    | #{doc.hosital[0].centerPhone}
                                        div
                                            h5.main-color.fw-bold.m-0.me-2 Rs.#{doc.hosital[0].hearingAid.price}
                                    .d-flex.justify-content-between
                                        div 
                                        div 
                                         if doc.status === "requested" || doc.status === 'accepted'
                                            button.btn.btn-danger.cancel_hearingaid_bookings.me-2(data-id=doc.hiwbhhID) Cancel
                                    
