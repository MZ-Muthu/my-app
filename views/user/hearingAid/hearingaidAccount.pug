block block 
    // Hero section Start
    section
        img.hero-image(src='/Assets/images/Hearing Aid.jpg' alt='homecare service banner')
        .hero-image-overlay
            .hero-image-text
                h1 Hearing Aid Account Page
    // Hero section End
    // Card Section Start
    section.mt-5.container
        .justify-content-center
            h5.heading Hearing Aid Order History
            .underline
            p.text-center.w-75.m-auto.mt-4
