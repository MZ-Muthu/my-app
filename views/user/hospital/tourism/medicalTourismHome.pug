extends ../../../layout/base

block append head 
    link(rel="stylesheet", href="/CSS/userStyle.css")
    link(rel="stylesheet", href="/CSS/lightslider.css")

block append script 
    script(src="/JS/bundle/user/bundleUser.js")     
    // Search Box Script

block block 
    // Hero section Start
    section
        img.hero-image(src='/Assets/images/MedicalTourism.jpg' alt='homecare service banner')
        .hero-image-overlay
            .hero-image-text
                h1 Our Treatment list
    // Hero section End
    // Card Section Start
    section.mt-5.container
        .justify-content-center.mb-5
            h5.heading Treatment Category List
            .underline
        .row.row-cols-2.row-cols-md-4.g-5
            each doc in docs
                .col
                    .card.h-100.pt-2
                        img.package-image.rounded(src=doc.bannerImage alt='service Name')
                        div
                            .p-1
                                h6.text-secondary.fw-bold.mt-2.text-center.text-uppercase= doc.name
                            a.m-0(href=`/hospital/tourism/${doc.name}`)
                                .d-flex.justify-content-center.m-0.package-card-button
                                    .p-2.bd-highlight
                                        h6.color-white View List
                                    .p-2.bd-highlight
                                        i.fa-solid.fa-arrow-right.color-white