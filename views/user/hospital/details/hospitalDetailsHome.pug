block block 
    // Hero section Start
    section
        .hero-image-wrapper
            img.hero-image(src='/Assets/images/HospitalDetails.jpg' alt='Hospital banner')
            .hero-image-overlay
            .hero-image-text
                h2.fw-bold.text-uppercase.hero-big-text Hospital and Clinics List
                p.text-dark.fw-bold.hero-description Lorem ipsum dolor sit amet consectetur adipisicing elit. Pariatur, optio
    // Hero section End
    // Catercory button Section Start
    section.mt-3.mb-2
        .d-flex.justify-content-center
            div
                h6#Tab3.hospitalType(data-type="hospitals" class=`${name === "hospitals" ? "tab-text-active" : "tab-text"}`)
                    | Hospitals
            div
                h6#Tab4.hospitalType(data-type='muti-speciality-hospital' class=`${name === "muti-speciality-hospital" ? "tab-text-active" : "tab-text"}`)
                    | Multi Speciality Hospital
            div
                h6#Tab4.hospitalType(data-type='medical-college' class=`${name === "medical-college" ? "tab-text-active" : "tab-text"}`)
                    | Medical College
            div
                h6.hospitalType(data-type="clinic" class=`${name === "clinic" ? "tab-text-active" : "tab-text"}`)
                    | Clinic
            div
                h6#Tab2.hospitalType(data-type="nursing-home" class=`${name === "nursing-home" ? "tab-text-active" : "tab-text"}`)
                    | Nursing Home
    // Catercory button Section Start
    // Home Care Service Centres List Section Start
    section.mt-4.container-xxl
        .row
            // Fillter Section
            .col-4.small-screnn-vn
                .small-shdow.p-3.rounded.mt-3
                    h6.fw-bold.mt-5
                        i.fa-solid.fa-hand-holding-dollar.me-3
                        |  Sort by price
                    .mt-4
                        form(action='#')
                            p
                                input#test1(type='radio' name='radio-group' checked='')
                                label(for='test1') Apple
                            p
                                input#test2(type='radio' name='radio-group')
                                label(for='test2') Peach
                            p
                                input#test3(type='radio' name='radio-group')
                                label(for='test3') Orange
            // Card Section
            .col-8.small-width-100
                .small-shdow.p-2.rounded
                    p.card-small-description.m-0 Shows 1-40 out of 400
                    h4.fw-bold.text-header-smalls#Headerofthesearch Result
                .row.row-cols-1.row-cols-md-1.row-cols-sm-2.g-1
                    each doc in docs
                        .small-shdow.rounded.mt-3
                            .row.m-0
                                .col-md-2.m-0.p-0
                                    img.img-thumbnail.border-0(src=doc.bannerImage alt='Shop Name')
                                .col-md-10.pt-2.ps-2.m-0
                                    h6.m-0.text-header-smalls.fw-bold= doc.name
                                    p.m-0.text-14.text-secondsry= doc.stream
                                    .row  
                                        .d-flex.flex-row.bd-highlight.m-0
                                            //- .bd-highlight
                                                p.card-small-description.m-0
                                                    i.fa-solid.fa-indian-rupee-sign.me-2.text-primary
                                                    |                       Rs.#{doc.priceFrom} - Rs.#{doc.priceTo}
                                            .bd-highlight
                                                p.card-small-description.m-0
                                                    i.fa-solid.fa-location-dot.me-2.ms-3.text-primary
                                                    |                       #{doc.city}
                                        .bd-highlight
                                                p.card-small-description.m-0
                                                    i.fa-solid.fa-book.me-2.ms-3.text-primary
                                                    |                       #{doc.about}
                                        .col-7
                                            .d-flex.justify-content-between.m-0.p-0
                                                .d-flex.flex-row.bd-highlight.m-0
                                                    .bd-highlight.me-1.fw-bold.text-14 Ratings :
                                                    .bd-highlight
                                                        i.fa-solid.fa-star.text-12.text-warning
                                                    .bd-highlight
                                                        i.fa-solid.fa-star.text-12.text-warning
                                                    .bd-highlight
                                                        i.fa-solid.fa-star.text-12.text-warning
                                                    .bd-highlight
                                                        i.fa-solid.fa-star.text-12.text-warning
                                                    .bd-highlight
                                                        i.fa-regular.fa-star.text-12.text-warning   
                                        .col-5                     
                                            a.button-view-details.text-12.float-end(href=`./${doc.stream}/${doc.id   }`)
                                                | View Details 
                                                i.fa-
                // Pagination Sction
                .text-center
                    .pagination_rounded
                        ul
                            li.card-head-s-screen
                                a.prev(href='#')
                                    i.fa.fa-angle-left(aria-hidden='true')
                                    |  Prev
                            li.card-head-s-screen
                                a(href='#') 1
                            li.hidden-xs.card-head-s-screen
                                a.active(href='#') 2
                            li.hidden-xs.small-screnn-vn
