                    //-     .col-7
                    //-         p Rs. 3,000
                    .border-top.w-100
                    .row
                        .col-5
                            p.fw-bold Payment Status
                        .col-7
                            p.text-success Paid
                    if doc.status === "pending"
                        .mt-4.justify-content-center.text-center.m-auto
                            a.add-address-button.cursor-pointer#cancel_differently_abled_order(data-id=doc.hiwdaposID) Cancel Order
                    else 
                        .mt-4.justify-content-center.text-center.m-auto
                            a.add-address-button.cursor-pointer()= doc.status 
