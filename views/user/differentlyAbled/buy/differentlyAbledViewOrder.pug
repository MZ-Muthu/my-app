block block 
    // Medicine List Section Start
    section.mt-4.container
        .row
            // Card Section
            .col-8
                h5.fw-bold.mb-4.text-uppercase Order Details
                article.card
                    header.card-header My Orders / Tracking
                    .card-body
                        div.d-flex.justify-content-between
                            h6 Order ID: OD45345345435
                        article.card
                            .card-body.row
                                .col
                                    strong Estimated Delivery time:
                                    br
                                    | 29 nov 2019
                                .col
                                    strong Shipping BY:
                                    br
                                    |                     BLUEDART, | 
                                    i.fa.fa-phone
                                    |  +1598675986
                                .col
                                    strong Status:
                                    br
                                    case doc.orderStatus
                                        when "placed"
                                            p Order Placed
                                        when 'accepted'
                                            p Order Confirmed
                                        when 'shipped'
                                            p Picked by the courier
                                        when "outofdelivery"
                                            p Departed For Delivery
                                        when "delivered"
                                            p Delivered
                                .col
                                    strong Tracking #:
                                    br
                                    |                     BD045903594059
                        .track
                            .step(class=`${doc.orderStatus !== "placed" && "active"}`)
                                span.icon
                                    i.fa.fa-check
                                span.text= doc.orderStatus !== "rejected" ? "Order confirmed" : "Rejected by Vendor"
                            .step(class=`${(doc.orderStatus !== 'placed' && doc.orderStatus !== "accepted" && doc.orderStatus !== "rejected") ? "active" : "" }`)
                                span.icon
                                    i.fa.fa-user
                                span.text  Picked by courier
                            .step(class=`${(doc.orderStatus === 'outofdelivery' || doc.orderStatus === "delivered") ? "active" : "" }`)
                                span.icon
                                    i.fa.fa-truck
                                span.text  On the way 
                            .step(class=`${doc.orderStatus === "delivered" && "active"}`)
                                span.icon
                                    i.fa.fa-box
                                span.text Delivered
                        hr
                        a.btn.btn-warning(href='#' data-abc='true')
                            i.fa.fa-chevron-left
                            |  Back to orders
            // Price Details Section
            .col-4
                .small-shdow.p-3.rounded
                    h5.fw-bold.mb-4.text-uppercase Price Details
                    img.img-thumbnail.border-0(src=doc.productData.bannerImage alt='Service image')
                    if doc.productData.discountPrice
                        .row
                            .col-5
                                p.fw-bold Discount Price
                            .col-7
                                p Rs.#{doc.productData.discountPrice}
                    .row
                        .col-5
                            p.fw-bold Price
                        .col-7
                            p Rs.#{doc.productData.price}
                    //- .row
                    //-     .col-5
                    //-         p.fw-bold Tax amount
