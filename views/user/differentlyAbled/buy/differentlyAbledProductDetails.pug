    // Product List Section Start
    section.mt-4.container
        .row
            // Product Image Section
            .col-6
                .text-center#market_image_slide
                    img#main-img.product-big-image(src=product.imageGallery[0])
                    .row.mt-4
                        each docs,index in product.imageGallery
                            .col
                                img.market_subImage.product-small-image(class=`${index === 0 && "active-small-image"}` src=docs style='width:86px;' alt='product image')
            // Details Section
            .col-6.ps-3
                h4.fw-bold Left Leg
                p.text-secondry Uploaded by : #{product.partner.name}
                h5.fw-bold
                    | Product Price: 
                    if product.discountPrice
                        span.text-danger  &#x20B9;#{product.discountPrice} 
                        del.text-secondary &#x20B9;#{product.price}
                    else 
                        span.text-danger  &#x20B9;#{product.price} 
                if product.productType !== "wheelchair"
                    p.fw-bold
                        | Product Type: 
                        span.fw-normal.text-secondry= product.productType
                    p.fw-bold
                        | Fit Type: 
                        span.fw-normal.text-secondry= product.fitType
                
                p.fw-bold
                    | Material Type: 
                    span.fw-normal.text-secondry= product.meterialType
                div
                    h6.fw-bold Description About The Product :
                    p.m-0= product.productDescription
                p.mt-4
                    span.me-2.fw-bold Quantity:
                    span  
                        select.marketSelectColor#diff_quantity
                            option(disabled) --qty--
                            option(value=1 selected) 1
                            option(value=2) 2
                            option(value=3) 3
                            option(value=4) 4
                            option(value=5) 5

