extends ../../layout/base

block append head 
    link(rel="stylesheet", href="/CSS/userStyle.css")
    link(rel="stylesheet", href="/CSS/lightslider.css")

block append script 
    script(src="/JS/bundle/user/bundleUser.js")     


block block
    // Hero section Start
    section.small-hero-image-div
        img.small-hero-image(src='/Assets/images/homeCare.jpg' alt='homecare service banner')
        .small-hero-image-overlay
            .hero-image-text
                h1 Select Address and Conform Booking
    // Hero section End
    // Address List Section Start
    section.container.mt-5
        .d-flex.justify-content-between
            div
                h6.fw-bold.text-uppercase Select your home Address
            div
                a.add-address-button(data-bs-toggle='modal' data-bs-target='#staticBackdrop') Add New Address
                // Modal
                #staticBackdrop.modal.fade(data-bs-backdrop='static' data-bs-keyboard='false' tabindex='-1' aria-labelledby='staticBackdropLabel' aria-hidden='true')
                    .modal-dialog.modal-dialog-scrollable
                        .modal-content
                            .modal-header
                                h5#staticBackdropLabel.modal-title.main-color.fs-6.text-uppercase.fw-bold
                                    | Add new address
                                button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
                            .modal-body
                                form#add_new_address
                                    div
                                        h6
                                            | Full name
                                            i.fa-solid.fa-star-of-life.text-danger.text-12
                                        p
                                            input(placeholder='Full name...' id='fname' required='')
                                    div
                                        h6
                                            | Address Line
                                            i.fa-solid.fa-star-of-life.text-danger.text-12
                                        p
                                            input(placeholder='Address Line...' id='address' required='')
                                    div
                                        h6
                                            | City
                                            i.fa-solid.fa-star-of-life.text-danger.text-12
                                        p
                                            input#city(placeholder='City...' name='fname' required='')
                                    div
                                        h6
                                            | State
                                            i.fa-solid.fa-star-of-life.text-danger.text-12
                                        p
                                            input#state(placeholder='State...' name='fname' required='')
                                    div
                                        h6
                                            | Pincode
                                            i.fa-solid.fa-star-of-life.text-danger.text-12
                                        p
                                            input#pincode(placeholder='Pincode...' name='fname' required='')
                                    div
                                        h6
                                            | Phone number 1
                                            i.fa-solid.fa-star-of-life.text-danger.text-12
                                        p
                                            input#phone1(placeholder='Phone number...' name='fname' required='')
                                    div
                                        h6
                                            | Phone number 2
                                        p
                                            input#phone2(placeholder='Phone number...' name='fname' )
                                    div    
                                        button.conform-service-booking(type="submit") Add Address
                            .modal-footer
                // Address List Section End

        .mt-3#market_product_checkout
            .row
                .col-8
                    .row.row-cols-1.row-cols-md-2.g-4
                        each docs,index in address
                            .col.market_checkout_address
                                .card.h-100.p-3.market_address_shadow(class=`${index === 0 && "shadow-medium"}`)
                                    .d-flex.justify-content-between
                                        .d-flex.flex-row.bd-highlight
                                            .bd-highlight.me-2
                                                p.address_lists(class=`${index === 0 ? "circle-Filled" : "circle-layour"} ` data-id=docs.hiwnusID)
                                            .bd-highlight
                                                h6.fw-bold= docs.name
                                        .d-flex.flex-row.bd-highlight
                                            .bd-highlight
                                                //- a.cursor-pointer(data-bs-toggle='modal' data-bs-target='#staticBackdrop')
                                                    i.fa-regular.fa-pen-to-square.me-3.text-success.border.border-success.p-1.border-3.rounded
                                                    // Modal
                                                //- #staticBackdrop.modal.fade(data-bs-backdrop='static' data-bs-keyboard='false' tabindex='-1' aria-labelledby='staticBackdropLabel' aria-hidden='true')
                                                    .modal-dialog.modal-dialog-scrollable
                                                        .modal-content
                                                            .modal-header
                                                                h5#staticBackdropLabel.modal-title.main-color.fs-6.text-uppercase.fw-bold
                                                                    | Update Address
                                                                button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
                                                            .modal-body
                                                                form#update_address(data-id=docs.hiwnusID,data-index=index)
                                                                    div
                                                                        h6
                                                                            | Full name
                                                                            i.fa-solid.fa-star-of-life.text-danger.text-12
                                                                        p
                                                                            input(placeholder='Full name...' id=`fname${index}` required='')
                                                                    div
                                                                        h6
                                                                            | Address Line
                                                                            i.fa-solid.fa-star-of-life.text-danger.text-12
                                                                        p
                                                                            input(placeholder='Address Line...' id=`address${index}` required='')
                                                                    div
                                                                        h6
                                                                            | City
                                                                            i.fa-solid.fa-star-of-life.text-danger.text-12
                                                                        p
                                                                            inpu(placeholder='City...' name='fname' required='' id=`city${index}`)
                                                                    div
                                                                        h6
                                                                            | State
                                                                            i.fa-solid.fa-star-of-life.text-danger.text-12
                                                                        p
                                                                            input(placeholder='State...' name='fname' required='' id=`state${index}`)
                                                                    div
                                                                        h6
                                                                            | Pincode
                                                                            i.fa-solid.fa-star-of-life.text-danger.text-12
                                                                        p
                                                                            input(placeholder='Pincode...' name='fname' required='' id=`pincode${index}`)
                                                                    div
                                                                        h6
                                                                            | Phone number 1
                                                                            i.fa-solid.fa-star-of-life.text-danger.text-12
                                                                        p
                                                                            input(placeholder='Phone number...' name='fname' id=`phone1${index}` required='')
                                                                    div
                                                                        h6
                                                                            | Phone number 2
                                                                        p
                                                                            input#phone2(placeholder='Phone number...' id=`phone2${index}` name='fname' )
                                                                    div    
                                                                        button.conform-service-booking(type="submit") Update Address
                                                            .modal-footer
                                                    // Address List Section End

                                            .bd-highlight
                                                
                                                    i.fa-solid.fa-trash-can.text-danger.border.border-danger.p-1.border-3.rounded#delete_address.cursor-pointer(data-id=docs.hiwnusID,data-index=index)
                                    p #{docs.address}, #{docs.city}, #{docs.state}, #{docs.pincode}
                                    .d-flex
                                        p.fw-bold.me-2= docs.phone1
                                        p.fw-bold= docs.phone2
                .col-4
                    .small-shdow.p-3.rounded
                        h5.fw-bold.mb-4.text-uppercase Price Details
                        img.img-thumbnail.border-0(src='./Assets/images/bpmonitor.png' alt='Service image')
                        .row
                            .col-5
                                p.fw-bold Medicine Price
                            .col-7
                                p Rs. 3,000
                        .row
                            .col-5
                                p.fw-bold Total savings
                            .col-7
                                p Rs. 3,000
                        .row
                            .col-5
                                p.fw-bold Tax amount
                            .col-7
                                p Rs. 3,000
                        .border-top.w-100
                        .row
                            .col-5
                                p.fw-bold Total
                            .col-7
                                p Rs. 3,000
                        .border-top.w-100
                        .mt-4
                            h6 Select Payment Method
                            p
                                select.form-select.border(aria-label='Default select example')
                                    option(selected='') Select Payment Method
                                    option(value='1') Card
                                    option(value='2') UPI
                                    option(value='3') Net Banking
                        .mt-4.justify-content-center.text-center.m-auto
                            button.add-address-button#laboratory_book_lab() Place Order
