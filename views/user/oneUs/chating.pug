extends ../../layout/base

block append head 
    link(rel="stylesheet", href="/CSS/userStyle.css")
    link(rel="stylesheet", href="/CSS/lightslider.css")

block append script 
    script(src="/JS/bundle/user/bundleUser.js")     

block block     
    // Chat Section
    section#content4.display-n
      .container
        .d-flex.justify-content-between
          div
            h5 Our Communty Disscussion
        .row.clearfix
          .col-lg-12
            .card.chat-app
              #plist.people-list
                .input-group
                  .input-group-prepend
                    span.input-group-text
                      i.fa.fa-search.pt-1.pb-1
                  input.form-control(type='text' placeholder='Search...')
                ul.list-unstyled.chat-list.mt-2.mb-0
                  li.clearfix
                    img(src='https://bootdey.com/img/Content/avatar/avatar1.png' alt='avatar')
                    .about
                      .name Vincent Porter
                      .status
                        i.fa.fa-circle.offline
                        |  left 7 mins ago
                  li.clearfix.active
                    img(src='https://bootdey.com/img/Content/avatar/avatar2.png' alt='avatar')
                    .about
                      .name Aiden Chavez
                      .status
                        i.fa.fa-circle.online
                        |  online
                  li.clearfix
                    img(src='https://bootdey.com/img/Content/avatar/avatar3.png' alt='avatar')
                    .about
                      .name Mike Thomas
                      .status
                        i.fa.fa-circle.online
                        |  online
                  li.clearfix
                    img(src='https://bootdey.com/img/Content/avatar/avatar7.png' alt='avatar')
                    .about
                      .name Christian Kelly
                      .status
                        i.fa.fa-circle.offline
                        |  left 10 hours ago
                  li.clearfix
                    img(src='https://bootdey.com/img/Content/avatar/avatar8.png' alt='avatar')
                    .about
                      .name Monica Ward
                      .status
                        i.fa.fa-circle.online
                        |  online
                  li.clearfix
                    img(src='https://bootdey.com/img/Content/avatar/avatar3.png' alt='avatar')
                    .about
                      .name Dean Henry
                      .status
                        i.fa.fa-circle.offline
                        |  offline since Oct
                        |                         28
              .chat
                .chat-header.clearfix
                  .row
                    .col-lg-6
                      a(href='javascript:void(0);' data-toggle='modal' data-target='#view_info')
                        img(src='https://bootdey.com/img/Content/avatar/avatar2.png' alt='avatar')
                      .chat-about
                        h6.m-b-0 Aiden Chavez
                        small Last seen: 2 hours ago
                    .col-lg-6.hidden-sm.text-right
                      a.btn.btn-outline-secondary(href='javascript:void(0);')
                        i.fa.fa-camera
                      a.btn.btn-outline-primary(href='javascript:void(0);')
                        i.fa.fa-image
                      a.btn.btn-outline-info(href='javascript:void(0);')
                        i.fa.fa-cogs
                      a.btn.btn-outline-warning(href='javascript:void(0);')
                        i.fa.fa-question
                .chat-history
                  ul.m-b-0
                    li.clearfix
                      .message-data.text-right
                        span.message-data-time 10:10 AM, Today
                        img(src='https://bootdey.com/img/Content/avatar/avatar7.png' alt='avatar')
                      .message.other-message.float-right
                        | Hi Aiden, how are you? How is the project coming along?
                    li.clearfix
                      .message-data
                        span.message-data-time 10:12 AM, Today
                      .message.my-message
                        | Are we meeting today?
                    li.clearfix
                      .message-data
                        span.message-data-time 10:15 AM, Today
                      .message.my-message
                        | Project has been already finished and I have results to
                        | show you.
                .chat-message.clearfix
                  .input-group.mb-0
                    .input-group-prepend
                      span.input-group-text
                        i.fa.fa-send.pt-1.pb-1
                    input.form-control(type='text' placeholder='Enter text here...')
    // Chat End
